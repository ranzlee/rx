@implements IComponentModel<CounterModel>

<div class="max-w-96">
    <form>
        <div class="flex justify-center">
            <!-- Decrement Button -->
            <button 
                aria-label="Decrement count" 
                fx-method="POST"
                fx-action="/examples/counter/decrement">
                <span class="text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="112" height="112" fill="currentColor" viewBox="0 0 16 16">
                        <path d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z"/>
                    </svg>
                </span>
            </button>
            <!-- Counter Value -->
            <CounterValue Model="@(Model)" />
            <!-- Increment Button -->
            <button 
                aria-label="Increment count" 
                fx-method="POST"
                fx-action="/examples/counter/increment">
                <span class="text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="112" height="112" fill="currentColor" viewBox="0 0 16 16">
                        <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
                    </svg>
                </span>
            </button>
        </div>
        <!-- Counter Error -->
        <CounterError Model="@(Model)" />
    </form>
</div>

@code {
    [Parameter] public CounterModel Model { get; set; } = new();
}